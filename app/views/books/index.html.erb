<%- model_class = Book -%>
<div class="page-header">
  <h1>Книги</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Наименование</th>
      <th>Авторы</th>
      <th>Цена</th>
      <th></th>
      <% if can? :update, @books %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to image_tag(book.image_url, class: 'list_image'), book_path(book) %></td>
        <td><%= link_to book.name, book_path(book) %></td>
        <td>
	  <% for author in book.authors %>
	    <% if !author.nil? %>
	      <%= link_to author.name, author_path(author) %>
	    <% end %>
	    <% if author != book.authors.last %>,<% end %>
	  <% end %>
        </td>
        <td><%= number_to_currency(book.price) %></td>
        <td><%= book.comments.to_caption %></td>
        <td>
          <% if can? :update, book %>
	    <%= link_to t('.edit', :default => t("helpers.links.edit")),
			edit_book_path(book), :class => 'btn btn-mini' %>
	  <% end %>
	  <% if can? :destroy, book %>
	    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			book_path(book),
			:method => :delete,
			:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			:class => 'btn btn-mini btn-danger' %>
	  <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Book %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
	      new_book_path,
	      :class => 'btn btn-primary' %>
<% end %>
