<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @book.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @book.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @book.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @book.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pages) %>:</strong></dt>
  <dd><%= @book.pages %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @book.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publisher_id) %>:</strong></dt>
  <dd><%= @book.publisher.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <% if can? :update, @book %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
		edit_book_path(@book), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @book %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		book_path(@book),
		:method => 'delete',
		:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		:class => 'btn btn-danger' %>
  <% end %>
</div>
