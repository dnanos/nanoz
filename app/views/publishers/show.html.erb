<%- model_class = Publisher -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Издательство " + @publisher.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Об издательстве:</strong></dt>
  <dd><%= @publisher.description %></dd>
  <dt><strong>Книг издательства в нашем каталоге:</strong></dt>
  <dd><%= @publisher.book.count %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Вернуться к списку издательств', publishers_path, :class => 'btn'  %>
  <% if can? :update, @publisher %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
		edit_publisher_path(@publisher), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @publisher %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		publisher_path(@publisher),
		:method => 'delete',
		:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		:class => 'btn btn-danger' %>
  <% end %>
</div>
