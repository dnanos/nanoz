<% if can? :update, @author %>

  <%= form_for @author, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
	<%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
	<%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :image_url, :class => 'control-label' %>
      <div class="controls">
	<%= f.text_field :image_url, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :book_id, :class => 'control-label' %>
      <div class="controls">
	<%= f.text_field :book_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
	<%= f.text_field :user_id, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
		  authors_path, :class => 'btn' %>
    </div>
  <% end %>
  
<% else %>
  <div>
    <i>
      <%= t :admin_only %>
    </i>
  </div>
<% end %>