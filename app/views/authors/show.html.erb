<%- model_class = Author -%>
<div class="page-header">
  <h1><%= @author.name %></h1>
</div>

<p><%= image_tag(@author.image_url) %></p>

<dl class="dl-horizontal">
  <dt><strong>Об авторе:</strong></dt>
  <dd><%= @author.description %></dd>
  <dt><strong>Книг в нашем каталоге:</strong></dt>
  <dd><%= @author.books.count %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Вернуться к списку авторов', authors_path, :class => 'btn'  %>
              
  <% if can? :update, @author %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
		edit_author_path(@author), :class => 'btn' %>
  <% end %>
  <% if can? :delete, @author %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		author_path(@author),
		:method => 'delete',
		:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		:class => 'btn btn-danger' %>
  <% end %>
</div>
